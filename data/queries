# list all time series
list series

# CPU Idle
select mean(value) from cpu_idle
group by time(30m)
where time > now() - 1d

# CPU Idle for server1
select mean(value) from cpu_idle
group by time(30m)
where time > now() - 1d and hostName = 'server1'

# CPU Idle - Get the number of data points from the cpu_idle series for the last hour:
select count(value) from cpu_idle where time > now() - 1h


# Events - Number of events per hour
select count(customerId) from customer_events
where time > now() - 1d group by time(10m)
